function test2_admin ()
{
    $form = array();
    
    $form['sitename'] = array(
        '#type' => 'textfield',
        '#title' => t('Site'),
        '#default_value' => variable_get('sitename',''),
        '#size' => 20,
        '#maxlength' => 20,
        '#description' => t('withoutt "http://"'),
    );

    return system_settings_form ($form);
}//========================= end function



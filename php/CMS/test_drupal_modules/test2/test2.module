function test2_form ($form_state)
{
	drupal_set_message("function test2_form");
	$form = array();
	$form['test2_wrapper'] = array(
		'#prefix' => '<div style="background:palegreen;">',
		'#value' => t('test2 value'),
		'#suffix' => '</div>',
	);
	return $form;
}//================= end function

